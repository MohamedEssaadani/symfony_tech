{% extends "base.html.twig" %}

{% block body %}

	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header d-block">
					<h3>Modifier Département</h3>
				</div>
				<div class="card-body">
					<form action="{{path('Departements.update')}}" method="POST">
						<div class="row">
							<label class="col-sm-4 col-lg-4 col-form-label">ID Département</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-file-text"></i>
										</label>
									</span>
									<input type="text" name="id" value="{{departement.id}}" readonly class="form-control" required>
								</div>
							</div>

							<label class="col-sm-4 col-lg-4 col-form-label">Nom Département</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-file-text"></i>
										</label>
									</span>
									<input type="text" name="nom" value="{{departement.nomDepartement}}" class="form-control" required>

								</div>
							</div>

						</div>
						<button class="btn btn-success" style="float:right;">
							<i class="ik ik-save"></i>
							Save</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
