{% extends "base.html.twig" %}

{% block body %}

	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header d-block">
					<h3>Modifier Professeur</h3>
				</div>
				<div class="card-body">
					<form action="{{path('Professeurs.update')}}" method="POST">

						<div class="row">
							<label class="col-sm-4 col-lg-4 col-form-label">Professeur ID</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-slack"></i>
										</label>
									</span>
									<input type="text" name="id" value="{{professeur.id}}" readonly class="form-control">
								</div>
							</div>


							<label class="col-sm-4 col-lg-4 col-form-label">Nom</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-terminal"></i>
										</label>
									</span>
									<input type="text" name="nom" value="{{professeur.nom}}" class="form-control" required>
								</div>
							</div>

							<label class="col-sm-4 col-lg-4 col-form-label">Prénom</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-terminal"></i>
										</label>
									</span>
									<input type="text" name="prenom" value="{{professeur.prenom}}" class="form-control" required>


								</div>
							</div>

							<label class="col-sm-4 col-lg-4 col-form-label">CIN</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-credit-card"></i>
										</label>
									</span>
									<input type="text" name="cin" value="{{professeur.cin}}" class="form-control" required>

								</div>
							</div>

							<label class="col-sm-4 col-lg-4 col-form-label">Adresse</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-home"></i>
										</label>
									</span>
									<input type="text" name="adresse" value="{{professeur.adresse}}" class="form-control" required>

								</div>
							</div>

							<label class="col-sm-4 col-lg-4 col-form-label">Téléphone</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-phone"></i>
										</label>
									</span>
									<input type="text" name="telephone" value="{{professeur.telephone}}" class="form-control" required>

								</div>
							</div>

							<label class="col-sm-4 col-lg-4 col-form-label">Email</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-at-sign"></i>
										</label>
									</span>
									<input type="email" name="email" value="{{professeur.email}}" class="form-control" required>

								</div>
							</div>

							<label class="col-sm-4 col-lg-4 col-form-label">Date Recrutement</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-watch"></i>
										</label>
									</span>
									<input type="date" name="date_recrutement" value="{{professeur.dateRecrutement|date('Y-m-d')}}" class="form-control" required>
								</div>
							</div>


							<label class="col-sm-4 col-lg-4 col-form-label">Département</label>
							<div class="col-sm-8 col-lg-8">
								<div class="input-group">
									<span class="input-group-prepend">
										<label class="input-group-text">
											<i class="ik ik-home"></i>
										</label>
									</span>
									<select name="departement" class="form-control" required>
										<option value="">--Département--</option>
										{% for departement in departements  %}
											{% if departement.id == professeur.departement.id %}
												<option value="{{departement.id}}" selected>{{departement.nomDepartement}}</option>
											{% else %}
												<option value="{{departement.id}}">{{departement.nomDepartement}}</option>
											{% endif %}
										{% endfor %}
									</select>

								</div>
							</div>

						</div>
						<button class="btn btn-success" style="float:right;">
							<i class="ik ik-save"></i>
							Save</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
